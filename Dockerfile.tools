# This Dockerfile is used to let Dependabot manage pinned versions of tools that
# will be installed using the target `make install`

# Keep these sorted alphabetically, separated by an empty line

FROM bats/bats:1.8.0 as bats

FROM hashicorp/packer:1.8.3 as packer

FROM hashicorp/terraform:1.3.2 as terraform

FROM koalaman/shellcheck:v0.8.0 as shellcheck

FROM localstack/localstack:1.2.0 as localstack

FROM mikefarah/yq:4.28.1 as yq

FROM mstruebing/editorconfig-checker:2.4.0 as ec

FROM quay.io/terraform-docs/terraform-docs:0.16.0 as tfdocs

FROM rclone/rclone:1.60.0 as rclone
